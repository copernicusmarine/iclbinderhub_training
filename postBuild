#!/bin/bash
set -euxo pipefail

wget "https://atlas.mercator-ocean.fr/s/o3x4qcYL6qDDHDs/download" -O training-materials.zip
mkdir -p Python_For_Marine_Data_Tutorial
bsdtar -xf training-materials.zip --strip-components=1 -C Python_For_Marine_Data_Tutorial
rm -f training-materials.zip
 
R -e "install.packages('ggquiver', repos='https://cloud.r-project.org')"
