#!/bin/bash
set -e


wget "https://atlas.mercator-ocean.fr/s/i76MKm9zbbkJNW4/download" -O cyclone.zip
mkdir essentials
bsdtar -xf cyclone.zip --strip-components=1 -C essentials
rm -rf cyclone.zip

wget "https://atlas.mercator-ocean.fr/s/f7ZpzWgnASPMoWF/download" -O essentials-python-manipulation.zip
mkdir essentials-python-manipulation
bsdtar -xf essentials-python-manipulation.zip --strip-components=1 -C essentials-python-manipulation
rm -rf essentials-python-manipulation.zip


# Register Python kernel (from the conda env)
python -m ipykernel install --user --name "python-marine" --display-name "Python - Copernicus Marine"

# Register R kernel (also inside same env)
R -e "IRkernel::installspec(prefix = Sys.getenv('CONDA_PREFIX'), name = 'ir', displayname = 'R')"
